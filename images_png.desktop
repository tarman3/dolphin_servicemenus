[Desktop Entry]
Type=Service
MimeType=image/png;
Actions=png8;optipng
X-KDE-Submenu=Images Actions
X-KDE-Priority=TopLevel


[Desktop Action png8]
Name=PNG 8bit convert
Exec=for file in %F; do args=$args';'$file; done; ~/.local/share/kio/servicemenus/images_png8.sh "${args:1}"

[Desktop Action optipng]
Name=PNG Optimization
Exec=for file in %F; do args=$args';'$file; done; ~/.local/share/kio/servicemenus/images_png_opti.sh "${args:1}"
